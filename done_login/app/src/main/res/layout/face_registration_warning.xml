<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Add 2D face data"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_weight="1">
        </TextView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3"
            android:scaleType="fitXY"
            android:src="@mipmap/face_recognition" />
        <TextView
            android:id="@+id/face_registration_warning_username"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Username"
            android:layout_weight="0.5"
            android:paddingTop="20dp"
            android:textFontWeight="2"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:id = "@+id/face_registration_warning_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Email"
            android:layout_weight="0.5"
            android:paddingTop="10dp"
            android:textFontWeight="2"
            android:textSize="20dp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/face_register_warning1"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:textFontWeight="2"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/face_register_warning2"
            android:layout_weight="1"
            >

        </TextView>

        <Button
            android:id="@+id/face_registration_warning_next"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:layout_marginBottom="45dp"
            android:text="Next"
            >

        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>